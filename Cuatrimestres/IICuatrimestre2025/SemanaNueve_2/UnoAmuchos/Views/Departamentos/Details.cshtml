@model UnoAmuchos.Models.Departamento

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
        <h4>Empleados</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Id Empleado
                    </th>
                    <th>
                        Nombre Empleado
                    </th>
                    <th>
                        Foto
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Empleados)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdEmpleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                             <img src="@Html.DisplayFor(modelItem => item.Foto)" width="100" height="100" />
                        </td>
                    </tr>
                }
            </tbody>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdDepartamento">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
